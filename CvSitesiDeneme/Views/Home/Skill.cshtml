@using CvSitesiDeneme.Models;
@model List<Skill>
<section id="skills" class="skills-section section-padding">
    <div class="container">
        <h2 class="section-title wow fadeInUp">BECERİLER</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                if (item.IsBest == true)
                {
                    var i = 0;
                    var ilk = 0;

                    if (i < 3)
                    {
                        if (ilk == 0)
                        {

                            <div class="col-md-6">
                                <div class="skill-progress">
                                    <div class="skill-title"><h3>@item.SkillName</h3></div>
                                    <div class="progress">
                                        <div class="progress-bar six-sec-ease-in-out" role="progressbar" aria-valuenow="@item.Level" aria-valuemin="0" aria-valuemax="100">
                                            <span>@item.Level%</span>
                                        </div>
                                    </div><!-- /.progress -->
                                </div><!-- /.skill-progress -->
                            </div>
                            ilk = 1;
                        }
                        else
                        {
                            <div class="skill-progress">
                                <div class="skill-title"><h3>@item.SkillName</h3></div>
                                <div class="progress">
                                    <div class="progress-bar six-sec-ease-in-out" role="progressbar" aria-valuenow="@item.Level" aria-valuemin="0" aria-valuemax="100">
                                        <span>@item.Level%</span>
                                    </div>
                                </div><!-- /.progress -->
                            </div><!-- /.skill-progress -->
                        }
                        i++;
                    }
                    if (i >= 3)
                    {
                        if (ilk == 1)
                        {

                            <div class="col-md-6">
                                <div class="skill-progress">
                                    <div class="skill-title"><h3>@item.SkillName</h3></div>
                                    <div class="progress">
                                        <div class="progress-bar six-sec-ease-in-out" role="progressbar" aria-valuenow="@item.Level" aria-valuemin="0" aria-valuemax="100">
                                            <span>@item.Level%</span>
                                        </div>
                                    </div><!-- /.progress -->
                                </div><!-- /.skill-progress -->
                            </div>
                            ilk = 2;
                        }
                        else
                        {
                            <div class="skill-progress">
                                <div class="skill-title"><h3>@item.SkillName</h3></div>
                                <div class="progress">
                                    <div class="progress-bar six-sec-ease-in-out" role="progressbar" aria-valuenow="@item.Level" aria-valuemin="0" aria-valuemax="100">
                                        <span>@item.Level%</span>
                                    </div>
                                </div><!-- /.progress -->
                            </div><!-- /.skill-progress -->
                        }
                        i++;
                    }
                }
            }
        </div>

        <div class="skill-chart text-center">
            <h3>DİĞER BECERİLER</h3>
        </div>
        <div class="row more-skill text-center"> </div>
        @foreach (var itemm in Model)
        {
            if (itemm.IsBest == false)
            {
                <div class="col-xs-12 col-sm-4 col-md-2">
                    <div class="chart" data-percent="@itemm.Level" data-color="e74c3c">
                        <span class="percent"></span>
                        <div class="chart-text">
                            <span>@itemm.SkillName</span>
                        </div>
                    </div>
                </div>

            }


        }
    </div><!-- /.container -->
</section>